<div class="page-header">
  <div class="breadcrumb">
    <a href="/">Categories</a> &gt; 
    <%= category.id ? 'Edit ' + category.name : 'New Category' %>
  </div>
</div>

<div class="form-container">
  <h2><%= category.id ? 'Edit Category' : 'Create New Category' %></h2>
  
  <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
    <div class="alert alert-error">
      <ul class="error-list">
        <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
        <% }); %>
      </ul>
    </div>
  <% } %>
  
  <form method="POST" action="<%= category.id ? `/categories/${category.id}/update` : '/categories/create' %>">
    <div class="form-group">
      <label for="name">Name</label>
      <input 
        type="text" 
        id="name" 
        name="name" 
        value="<%= category.name %>" 
        required
        maxlength="100"
      >
    </div>
    
    <div class="form-group">
      <label for="description">Description</label>
      <textarea 
        id="description" 
        name="description" 
        maxlength="500"
        rows="4"
      ><%= category.description %></textarea>
    </div>
    
    <div class="form-actions">
      <button type="submit" class="btn btn-primary">
        <%= category.id ? 'Update Category' : 'Create Category' %>
      </button>
      <a href="<%= category.id ? `/categories/${category.id}` : '/' %>" class="btn btn-secondary">Cancel</a>
    </div>
  </form>
</div> 