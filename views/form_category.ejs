<div class="breadcrumb">
  <a href="/">Home</a> &gt; 
  <% if (category.id) { %>
    <a href="/category/<%= category.id %>"><%= category.name %></a> &gt; Edit
  <% } else { %>
    Add New Category
  <% } %>
</div>

<section class="form-container">
  <h2><%= category.id ? 'Edit Category' : 'Add New Category' %></h2>
  
  <% if (errors.length > 0) { %>
    <div class="error-container">
      <ul class="errors">
        <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
        <% }); %>
      </ul>
    </div>
  <% } %>
  
  <form method="POST" action="<%= category.id ? `/category/${category.id}/update` : '/category/new' %>">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" id="name" name="name" value="<%= category.name || '' %>" required>
    </div>
    
    <div class="form-group">
      <label for="description">Description</label>
      <textarea id="description" name="description" rows="4" required><%= category.description || '' %></textarea>
    </div>
    
    <div class="form-actions">
      <a href="<%= category.id ? `/category/${category.id}` : '/' %>" class="btn btn-secondary">Cancel</a>
      <button type="submit" class="btn btn-primary"><%= category.id ? 'Update' : 'Create' %> Category</button>
    </div>
  </form>
</section> 