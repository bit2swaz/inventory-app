<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
</head>
<body>
  <div class="container">
    <header>
      <h1><%= message %></h1>
      <%- include('partials/navigation') %>
    </header>

    <main>
      <% if (isAdmin) { %>
        <div class="admin-actions">
          <a href="/categories/new" class="btn btn-success">Create New Category</a>
          <a href="/items/new" class="btn btn-success">Create New Item</a>
        </div>
      <% } %>
      
      <p class="intro-text">
        Browse our inventory of tech gadgets by category
      </p>

      <div class="home-categories">
        <h2>Categories</h2>
        <div class="categories-list">
          <% if (categories && categories.length > 0) { %>
            <% categories.forEach(category => { %>
              <div class="category-card">
                <h3><a href="/categories/<%= category.id %>"><%= category.name %></a></h3>
                <p><%= category.description %></p>
                <a href="/categories/<%= category.id %>" class="btn btn-small">View Items</a>
                <% if (isAdmin) { %>
                  <div class="admin-item-actions">
                    <a href="/categories/<%= category.id %>/edit" class="btn btn-small">Edit</a>
                    <a href="/categories/<%= category.id %>/confirm-delete" class="btn btn-small btn-danger">Delete</a>
                  </div>
                <% } %>
              </div>
            <% }); %>
          <% } else { %>
            <p>No categories found. <% if (isAdmin) { %><a href="/categories/new">Create one</a><% } %></p>
          <% } %>
        </div>
      </div>
      
      <div class="navigation home-nav">
        <a href="/categories" class="btn">All Categories</a>
        <a href="/items" class="btn">All Items</a>
      </div>
      
      <div class="theme-toggle">
        <button id="theme-switch" class="btn">Toggle Dark Mode</button>
      </div>
    </main>

    <%- include('partials/footer') %>
  </div>
  
  <script src="/js/theme.js"></script>
</body>
</html> 