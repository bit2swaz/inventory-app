<div class="hero">
  <h2>Welcome to Tech Gadget Inventory Manager</h2>
  <p>Manage your tech gadget inventory with ease</p>
</div>

<section class="categories">
  <div class="section-header">
    <h2>Categories</h2>
    <a href="/category/new" class="btn btn-primary">Add New Category</a>
  </div>
  
  <% if (categories.length === 0) { %>
    <div class="empty-state">
      <p>No categories found. Add your first category to get started!</p>
    </div>
  <% } else { %>
    <div class="card-grid">
      <% categories.forEach(category => { %>
        <div class="card">
          <div class="card-content">
            <h3><%= category.name %></h3>
            <p><%= category.description %></p>
          </div>
          <div class="card-actions">
            <a href="/category/<%= category.id %>" class="btn">View Items</a>
            <a href="/category/<%= category.id %>/update" class="btn btn-secondary">Edit</a>
            <a href="/category/<%= category.id %>/delete" class="btn btn-danger">Delete</a>
          </div>
        </div>
      <% }); %>
    </div>
  <% } %>
</section> 