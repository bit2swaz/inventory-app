<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <header>
      <h1>Categories</h1>
    </header>
    
    <main>
      <% if (isAdmin) { %>
        <div class="admin-actions">
          <a href="/categories/new" class="btn btn-success">Create New Category</a>
          <% if (categories && categories.length > 0) { %>
            <a href="/items/new" class="btn btn-success">Create New Item</a>
          <% } %>
          <a href="/admin/logout" class="btn btn-danger">Logout</a>
        </div>
      <% } %>
      
      <div class="categories-list">
        <% if (categories && categories.length > 0) { %>
          <% categories.forEach(category => { %>
            <div class="category-card">
              <h2><a href="/categories/<%= category.id %>"><%= category.name %></a></h2>
              <p><%= category.description %></p>
              <a href="/categories/<%= category.id %>" class="btn btn-small">View Items</a>
              <% if (isAdmin) { %>
                <div class="admin-item-actions">
                  <a href="/categories/<%= category.id %>/edit" class="btn btn-small">Edit</a>
                  <a href="/categories/<%= category.id %>/confirm-delete" class="btn btn-small btn-danger">Delete</a>
                </div>
              <% } %>
            </div>
          <% }); %>
        <% } else { %>
          <p>No categories found.</p>
        <% } %>
      </div>
      
      <div class="navigation">
        <a href="/" class="btn">Back to Home</a>
        <a href="/items" class="btn">View All Items</a>
      </div>
      
      <div class="theme-toggle">
        <button id="theme-switch" class="btn">Toggle Dark Mode</button>
      </div>
    </main>
    
    <footer>
      <p>made with ‚ù§ by <a href="https://github.com/bit2swaz" target="_blank">bit2swaz</a></p>
    </footer>
  </div>
  
  <script src="/js/theme.js"></script>
</body>
</html> 