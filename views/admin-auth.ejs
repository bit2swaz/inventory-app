<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
</head>
<body>
  <div class="container">
    <header>
      <h1>Admin Authentication</h1>
      <%- include('partials/navigation') %>
    </header>
    
    <main>
      <div class="auth-form">
        <% if (message) { %>
          <div class="alert <%= message.includes('Incorrect') ? 'alert-error' : 'alert-info' %>">
            <%= message %>
          </div>
        <% } %>
        
        <form action="/admin/auth" method="POST">
          <div class="form-group">
            <label for="adminPassword">Admin Password</label>
            <input type="password" id="adminPassword" name="adminPassword" required autofocus>
            <small>Enter the admin password to access protected features</small>
          </div>
          
          <input type="hidden" name="originalUrl" value="<%= originalUrl %>">
          
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Login</button>
            <a href="<%= originalUrl.startsWith('/admin') ? '/' : originalUrl %>" class="btn">Cancel</a>
          </div>
        </form>
      </div>
    </main>
    
    <%- include('partials/footer') %>
  </div>
  
  <script src="/js/theme.js"></script>
</body>
</html> 