<div class="breadcrumb">
  <a href="/">Home</a> &gt; 
  <a href="/category/<%= item.category_id %>"><%= item.category_name %></a> &gt; 
  <%= item.name %>
</div>

<section class="item-details">
  <div class="item-header">
    <h2><%= item.name %></h2>
    <div class="action-buttons">
      <a href="/item/<%= item.id %>/update" class="btn btn-secondary">Edit Item</a>
      <a href="/item/<%= item.id %>/delete" class="btn btn-danger">Delete Item</a>
    </div>
  </div>
  
  <div class="item-content-wrapper">
    <div class="item-image-container">
      <% if (item.image_url) { %>
        <img src="<%= item.image_url %>" alt="<%= item.name %>" class="item-image-large">
      <% } else { %>
        <div class="item-image-large placeholder">
          <div class="no-image">No Image Available</div>
        </div>
      <% } %>
    </div>
    
    <div class="item-info">
      <div class="info-group">
        <h3>Price</h3>
        <p class="price">$<%= item.price %></p>
      </div>
      
      <div class="info-group">
        <h3>Quantity in Stock</h3>
        <p class="quantity"><%= item.quantity %></p>
      </div>
      
      <div class="info-group">
        <h3>Category</h3>
        <p><a href="/category/<%= item.category_id %>"><%= item.category_name %></a></p>
      </div>
      
      <div class="info-group">
        <h3>Description</h3>
        <p><%= item.description %></p>
      </div>
    </div>
  </div>
</section> 