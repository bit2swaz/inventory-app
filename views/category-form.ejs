<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
</head>
<body>
  <div class="container">
    <header>
      <h1><%= title %></h1>
      <%- include('partials/navigation') %>
    </header>
    
    <main>
      <div class="form-container">
        <% if (locals.error) { %>
          <div class="alert alert-error">
            <%= error %>
          </div>
        <% } %>
        
        <form action="<%= action %>" method="POST">
          <div class="form-group">
            <label for="name">Category Name</label>
            <input type="text" id="name" name="name" value="<%= category ? category.name : '' %>" required>
          </div>
          
          <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" rows="4" required><%= category ? category.description : '' %></textarea>
          </div>
          
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="<%= category ? `/categories/${category.id}` : '/categories' %>" class="btn">Cancel</a>
          </div>
        </form>
      </div>
    </main>
    
    <%- include('partials/footer') %>
  </div>
</body>
</html> 